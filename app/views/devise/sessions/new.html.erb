<div class="ls-login-parent">
  <div class="ls-login-inner">
    <div class="ls-login-container">
      <div class="ls-login-box">
        <h1 class="ls-login-logo"><img title="Logo login" src="http://opensource.locaweb.com.br/locawebstyle/assets/images/locastyle/logo-locaweb.png"></h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "ls-form ls-login-form") do |f| %>
          <fieldset>

            <%= f.label :email, class: 'ls-label' do %>
              <b class="ls-label-text ls-hidden-accessible">Email</b>
              <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email', class: 'ls-login-bg-user ls-field-lg' %>
            <% end %>

            <%= f.label :password, class: 'ls-label' do %>
              <b class="ls-label-text ls-hidden-accessible">Senha</b>
              <div class="ls-prefix-group ls-field-lg">
                <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha', id: 'password_field', class: 'ls-login-bg-password'  %>
                <a class="ls-label-text-prefix ls-toggle-pass ls-ico-eye"
                  data-toggle-class="ls-ico-eye, ls-ico-eye-blocked" data-target="#password_field" href="#"></a>
              </div>
            <% end %>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: 'ls-login-forgot' %>
              </div>
            <% end %>

            <%= f.submit "Log in", class: 'ls-btn-primary ls-btn-block ls-btn-lg' %>

            <br>
            <%= render "devise/shared/links" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>