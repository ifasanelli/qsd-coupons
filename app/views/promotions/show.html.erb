<h1 class="ls-title-intro ls-ico-bullhorn">
  Promoção
</h1>

<div class="ls-box">
  <div class="ls-float-right ls-regroup">
    <%= link_to 'Editar', edit_promotion_path(@promotion), class: 'ls-btn-primary' %>
  </div>

  <div class="ls-label">
    <p><strong>Descrição:</strong></p>
    <p><%= @promotion.description %></p>
  </div>

  <div class="ls-label">
    <p><strong>Status da promoção:</strong></p>
    <p><%= @promotion.status %></p>
  </div>

  <div class="ls-label">
    <p><strong>Prefixo:</strong></p>
    <p><%= @promotion.prefix %></p>
  </div>

  <div class="ls-label">
    <p><strong>Porcentagem de desconto:</strong></p>
    <p><%= @promotion.discount_percentage %>%</p>
  </div>

  <div class="ls-label">
    <p><strong>Valor máximo de desconto:</strong></p>
    <p><%= @promotion.max_discount_value %></p>
  </div>

  <div class="ls-label">
    <p><strong>Data de início:</strong></p>
    <p><%= @promotion.start_date.strftime('%d/%m/%Y') %></p>
  </div>

  <div class="ls-label">
    <p><strong>Data de fim:</strong></p>
    <p><%= @promotion.end_date.strftime('%d/%m/%Y') %></p>
  </div>

  <div class="ls-label">
    <p><strong>Uso máximo:</strong></p>
    <p><%= @promotion.max_usage %></p>
  </div>
</div>

<div class="ls-box ls-board-box">
  <header class="ls-info-header">
    <h2 class="ls-title-3 col-md-6 ls-ico-text">
      Cupons desta promoção
    </h2>

    <div class="ls-actions-btn ls-float-right">
      <% unless @promotion.approved? %>
        <%= form_tag(approve_promotion_path(@promotion), method: :post) do %>
          <%= submit_tag 'Aprovar', class: 'ls-btn-primary' %>
        <% end %>
      <% end %>
    </div>
  </header>

  <div>
    <% if @promotion.approved? %>
      <%= link_to 'Emitir cupons', promotion_coupons_path(@promotion), method: :post, class: 'ls-btn-primary' if @promotion.approved? %>
    <% elsif @promotion.issued? %>
      <table class="ls-table">
        <tbody>
        <% @coupons.each do |coupon| %>
          <tr>
            <td><%= link_to coupon.code, promotion_coupon_path(coupon.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <p>Promoção aguardando aprovação</p>
    <% end %>
  </div>
</div>

